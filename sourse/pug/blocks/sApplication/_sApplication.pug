mixin sApplication(data)
	// start sApplication
	+b.SECTION.sApplication.section#sApplication&attributes(attributes)
		.container
			+e.steps
				+e.step.active Шаг 1
				+e.step Шаг 2
			.card
				+form-wrap
					+e.row.row
						+e.col.col-md
							+input('', 'text', 'инн')
						.col-md
							.form-wrap__input-wrap.form-wrap__input-wrap--select.form-group
								label
									span.form-wrap__input-title Номинация
									select(name="select").form-wrap__input.form-select
										option(value="")
										option(value=" placeholder 1") placeholder 1
										option(value=" placeholder 2") placeholder 2
										option(value=" placeholder 3") placeholder 3
										option(value=" placeholder 4") placeholder 4
						.col-12
							+input('', 'text', 'Название проекта')
						.col-12
							+input('', 'text', 'Отрасль')
						.col-12
							+in-c('checkbox', 'Возможность предоставить видео-презентацию').order-last
						.col-12
							.form-wrap__input-wrap.form-group
								label
									span.form-wrap__input-title КОНТАКТЫ
									input(inputmode="text" name="tel" type="text" placeholder="ТЕЛЕФОН").form-wrap__input.form-wrap__input--tel.form-control
									input(inputmode="text" name="text" type="text" placeholder="ССЫЛКА").form-wrap__input.form-control
						.col-12
							.form-wrap__input-wrap.form-wrap__input-wrap--radio.form-group
								label
									span.form-wrap__input-title ТИП ЗАЯВКИ
									+in-c('radio', 'ГРУППОВАЯ', 'type')
									+in-c('radio', 'ОДИНОЧНАЯ', 'type')
					+e.btn.btn.btn-gold.ms-auto(href='#') Далее
	// end sApplication

